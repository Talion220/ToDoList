<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_task.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="task"
            type="com.bignerdranch.android.todolist.Task" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Здесь размещайте элементы, представляющие данные задачи, например, описание задачи. -->
        <TextView
            android:id="@+id/taskDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{task.description}" />

        <!-- Дополнительные элементы интерфейса для отображения данных о задаче. -->

    </RelativeLayout>
</layout>